;This AI was designed for the E3 showcase scenario.

(defconst gl-player-score 10)
(defconst temporary-goal 11)

; Keeps track of the score
(defrule
	(true)
=>
	(up-get-player-fact 1 current-score 0 gl-player-score)
	;(up-modify-goal gl-player-score g:- temporary-goal)
)

; Send a signal if the score exceeds 4,000
(defrule
	(up-compare-goal gl-player-score > 4000)
=>
	(set-signal 0)
	(disable-self)
)

(defrule
	(taunt-detected 1 200)
=>
	(set-signal 1)
	(acknowledge-taunt 1 200)
)

(defrule
	(taunt-detected 1 201)
=>
	(set-signal 2)
	(acknowledge-taunt 1 201)
)


